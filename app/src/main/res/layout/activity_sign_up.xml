<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="60dp"
            android:contentDescription="logo and text"
            android:src="@drawable/ic_logoandtext_yellow"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="-25dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F5FA"
            android:elevation="0dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:onClick="onButtonLoginClicked"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Ingresar"
                    android:paddingVertical="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:textAllCaps="false"
                    android:textColor="#12121F"
                    android:textSize="14sp"
                    android:elevation="0dp"
                    app:cornerRadius="24dp"
                    android:stateListAnimator="@null"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFBD30"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAllCaps="false"
                    android:text="Registrarse"
                    android:layout_marginHorizontal="4dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="24dp"
                   />
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E0E4F5"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="22dp"
            android:layout_marginVertical="16dp"
            android:src="@drawable/ic_name_field_icon"/>
        <EditText
            android:id="@+id/name_register_input"
            app:startIconDrawable="@drawable/ic_name_field_icon"
            android:textColor="@color/black"
            android:paddingVertical="19dp"
            android:textSize="12dp"
            android:paddingLeft="64dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Nombre Completo" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="16dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E0E4F5"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="22dp"
            android:layout_marginVertical="16dp"
            android:src="@drawable/ic_email_field_icon"/>
        <EditText
            android:id="@+id/email_register_input"
            android:paddingLeft="64dp"
            android:paddingRight="16dp"
            android:paddingVertical="19dp"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Email" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="16dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E0E4F5"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="22dp"
            android:layout_marginVertical="16dp"
            android:src="@drawable/ic_pass_field_icon"/>
        <EditText
            android:id="@+id/password_register_input"
            android:paddingVertical="19dp"
            android:textSize="12dp"
            android:paddingLeft="64dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="Password" />

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/button_action_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFBD30"
        android:fontFamily="@font/poppins_semibold"
        android:textAllCaps="false"
        android:text="Registrarse"
        android:layout_marginHorizontal="4dp"
        android:paddingVertical="12dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="24dp"
        android:onClick="signUpButtonClicked"
    />



    </LinearLayout>



</LinearLayout>